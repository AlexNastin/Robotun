<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/security
    http://www.springframework.org/schema/security/spring-security-3.1.xsd">


	<http auto-config="true" use-expressions="true">
		<access-denied-handler error-page="/403page" />
		<anonymous username="GUEST" granted-authority="ROLE_GUEST" />
		<remember-me />

		<form-login login-page="/login" authentication-failure-url="/login?error=true"
			login-processing-url="/static/j_spring_security_check"
			authentication-success-handler-ref="webAppAuthenticationSuccessHandler" />




		<logout logout-url="/logout" logout-success-url="/index" />

		<!-- Role links -->
		<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
		<intercept-url pattern="/physical/**" access="hasRole('ROLE_USER_PHYSICAL')" />
		<intercept-url pattern="/legal/**" access="hasRole('ROLE_USER_LEGAL')" />
		<intercept-url pattern="/user/**"
			access="hasAnyRole('ROLE_USER_LEGAL','ROLE_USER_PHYSICAL')" />
		<intercept-url pattern="/moderator/**" access="hasRole('ROLE_MODERATOR')" />
		<intercept-url pattern="/**"
			access="hasAnyRole('ROLE_GUEST', 'ROLE_USER_LEGAL', 'ROLE_MODERATOR', 'ROLE_ADMIN','ROLE_USER_PHYSICAL')" />
	
	
	</http>
	<!-- Beans -->
	<beans:bean id="webAppAuthenticationSuccessHandler"
		class="by.robotun.webapp.security.WebAppAuthenticationSuccessHandler" />
	<beans:bean id="produxAuthenticationProvider"
		class="by.robotun.webapp.security.ProduxAuthenticationProvider" />

	<authentication-manager>
		<authentication-provider ref="produxAuthenticationProvider">
		</authentication-provider>
	</authentication-manager>
</beans:beans>
